<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer background (soft blue) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F6F9" />
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Simulated inner white card with shadow effect -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/>
            <!-- Simulasi inner shadow pakai stroke semi transparan -->
            <stroke
                android:width="1dp"
                android:color="#26000000" /> <!-- 15% opacity black -->
        </shape>
    </item>

</layer-list>
